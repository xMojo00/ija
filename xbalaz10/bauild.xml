<project>
	<target name="clean">
		<delete>
			<fileset dir="build">
				 <include name="*"/>
			</fileset>
		</delete>
	</target>
  
	<target name="compile">
  		<javac includeantruntime="false" classpath="lib/jfxrt.jar" srcdir="src" destdir="build"/>
 	</target>	

	<target name="jar">
  		<jar destfile="dest/ija-app.jar" basedir="build">
            <manifest>
                <attribute name="Main-Class" value="java.main"/>
            </manifest>
        </jar>
 	</target>
	
	<target name="run">
		<java jar="dest/ija-app.jar" fork="true"/>
	</target>
  
  
</project>


